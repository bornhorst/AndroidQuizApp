<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/bear_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuizTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/white_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SpinnerStyle" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorSpinner</item>
    </style>



</resources>
